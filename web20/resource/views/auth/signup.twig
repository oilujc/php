{% extends 'templates/app.twig' %}

{% block head %}
	{{parent()}}
{% endblock %}

{% block content %}
	
	<div class="row my-2">
		<div class="col-6 offset-3">
			<div class="card">
				<div class="card-header text-center">
					<h1>Sign up</h1>
				</div>
				<div class="card-block">

					<form action="{{ path_for('auth.signup') }}" method="post" autocomplete="off" accept-charset="utf-8">
						<div class="form-group mb-2 {{errors.email ? 'has-danger': ''}}">
							<label  class=" font-weight-bold" for="email">Email: </label>
							<input type="email" name="email" id="email" class=" form-control " placeholder="name@example.com">
							{% if errors.email %}
								<span class="form-control-feedback"> {{ errors.email | first}}</span>
							{% endif %}

						</div>
						<div class="form-group mb-2 {{errors.username ? 'has-danger': ''}}">
							<label  class=" font-weight-bold" for="username">Username: </label>
							<input type="text" name="username" id="username" class="form-control">
							{% if errors.username %}
								<span class="form-control-feedback"> {{ errors.username | first}}</span>
							{% endif %}
						</div>
						<div class="form-group mb-2 {{errors.password ? 'has-danger': ''}}">
							<label  class=" font-weight-bold" for="password">Password: </label>
							<input type="password" name="password" id="password" class="form-control">
							{% if errors.password %}
								<span class="form-control-feedback"> {{ errors.password | first}}</span>
							{% endif %}
						</div>
						
						<div class="text-center">
							<input type="submit" name="submit" value="Enviar" class="btn btn-primary">
						</div>
						
					</form>
				</div>
			</div>

		</div>

	</div>
{% endblock %}


{% block foot %}
	{{parent()}}
{% endblock %}